
@{
    ViewBag.Title = "detayliarama";
    Layout = "~/Views/Shared/dafault_layout.cshtml";
}

<form action="@Url.Action("dproducts","Home")" method="post">

    <!-- Single product area start  -->
    <div class="shop-wrapper">
        <div class="container">
            <div class="row">

                <div class="col-sm-3 col-md-3 col-lg-3"></div>

                <div class="col-sm-3 col-md-6 col-lg-6">
                    <div class="shop-by">
                        <h3>DETAYLI ARAYINIZ</h3>
                    </div>
                    <div class="all-shop-cat">

                        <div class="single-shop-cat">


                            @{
                                List<SelectListItem> sList = new List<SelectListItem>();
                                foreach (var item in ViewBag.kategoriListesi)
                                {
                                    SelectListItem sli = new SelectListItem();
                                    sli.Text = item.categoryname;
                                    sli.Value = item.categoryID.ToString();
                                    sList.Add(sli);
                                }
                            }

                            <h3 style="background-color:red;">Kategori Seçiniz @Html.DropDownList("kategoriler", new SelectList(sList, "Value", "Text"))</h3>

                            @*Marka*@
                            <h3 class="manufacturers" style="background-color:orange; margin-top:100px;">Marka Seçiniz</h3>
                            <ul style="background-color:orange;">
                                @foreach (var item in ViewBag.markaListesi)
                                {
                                    <li>
                                        <div>
                                            <input type="checkbox" name="markalar" value="@item.supplierID" /> &nbsp;&nbsp; <span style="color:black;">@item.brandname</span>
                                        </div>
                                    </li>
                                }
                            </ul>

                            <br /> <br />

                            <div>
                                @Html.RadioButton("stoktavarmi", "1", new { Value = "1", @checked = true }) &nbsp;
                                @Html.Label("Stokta Olanlar")

                                <br />

                                @Html.RadioButton("stoktavarmi", "0", new { Value = "0", @checked = false }) &nbsp;
                                @Html.Label("Hepsi")
                            </div>

                            

                            @*fiyat*@
                            <h3 class="manufacturers" style="background-color:lightgreen; margin-top:100px;">Fiyat Aralığı Seçiniz</h3>
                            <div class="price_filter">
                                <div id="slider-range"></div>
                                <div class="price_slider_amount">
                                    <p><input type="text" id="amount" name="amount" placeholder="Fiyat Aralığı Seçiniz" /></p>
                                    <input type="submit" value="Arayın" />
                                </div>
                            </div>




                            <div class="add-r-sidebar">
                                <p class="banner-block"><a href="single-product.html#"><img alt="" src="img/all-adds/3.jpg"></a></p>
                            </div>
                        </div>
                </div>
            </div>
        </div>
    </div>
    <!--Single product area End  -->
</form>