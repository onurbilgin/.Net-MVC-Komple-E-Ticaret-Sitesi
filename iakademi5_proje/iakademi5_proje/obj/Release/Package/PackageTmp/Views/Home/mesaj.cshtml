
@{
    ViewBag.Title = "mesaj";
    Layout = "~/Views/Shared/dafault_layout.cshtml";
}

<!-- map bannar area Start  -->
<div class="map-area">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12">
                @*<div id="googleMap" style="width:100%;height:433px;"></div>*@
                <div class="map-info-area">
                    <h3>BİZİMLE İLETİŞİME GEÇİN</h3>
