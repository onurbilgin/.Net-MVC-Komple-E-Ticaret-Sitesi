                   <a href="checkout.html#">Continue Shopping</a> 
                    <span><a href="checkout.html#">ÜYE KAYIT FORMU</a></span>
                </div> *@
                <div class="row">
                    <div class="all-out-area">
                        <div class="col-sm-12 col-md-3 col-lg-3"></div>
                        <div class="col-sm-12 col-md-6 col-lg-6">
                            <div class="bt-info">
                                <h3 class="proopc-process-title" style="background-color: black">ÜYE KAYIT FORMU</h3>
                                <div class="chek-full-info">
                                    <div class="inner-wrap">
                                        <div class="edit-address">
                                            <form method="post" action="/Home/uyeol"> 

                                                <div>
                                                    <div class="inner">
                                                        <label class="email">E-Mail *</label>
                                                        <input type="email" name="email" required>
                                                    </div>
                                                </div>

                                                <div class="company-group">
                                                    <div class="inner">
                                                        <label class="company">Şifre</label>
                                                        @Html.Password("parola", null, new { placeholder = "Parola Giriniz", @class = "concact_input", @required = "required" })
                                                    </div>
                                                </div>

                                                <div>
                                                    <div class="inner">
                                                        <label class="email">İsim Soyisim</label>
                                                        <input type="text" name="isimsoyisim" required>
                                                    </div>
                                                </div>

                                                <div>
                                                    <div class="inner">
                                                        <label class="email">Telefon</label>
                                                        <input type="text" name="telefon" required onkeypress="return numbersonly(this, event);" maxlength="10">
                                                    </div>
                                                </div>

                                                <div>
                                                    <div class="inner">
                                                        <label class="email">Fatura Adresi</label>
                                                        <textarea name="faturaadresi" cols="80" rows="5" required></textarea>
                                                    </div>
                                                </div>

                                                <div class="submit_cart">
                                                    <input type="submit" id="btnKayit" name="name" value="Kayıt Ol" class="update_cart" />
                                                </div>

                                                <input type="hidden" name="adminmi" value="false" />

                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- wishlist area end  -->


<script type="text/javascript">

    function numbersonly(myfield, e, dec) {
        var key;
        var keychar;

        if (window.event)
            key = window.event.keyCode;
        else if (e)
            key = e.which;
        else
            return true;
        keychar = String.fromCharCode(key);

        // control keys
        if ((key == null) || (key == 0) || (key == 8) ||
(key == 9) || (key == 13) || (key == 27))
            return true;

            // numbers
        else if ((("0123456789").indexOf(keychar) > -1))
            return true;

            // decimal point jump
        else if (dec && (keychar == ".")) {
            myfield.form.elements[dec].focus();
            alert("Lütfen sadece rakam giriniz.");
            return false;
        }
        else {
            alert("Lütfen sadece rakam giriniz.");
            return false;
        }

    }
</script> 